{
  "name": "markdown-editor-pro",
  "private": true,
  "version": "0.9.3",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "node scripts/generateBuildInfo.mjs && node scripts/updateServiceWorkerVersion.mjs && vite build",
    "build:dev": "vite build",
    "preview": "vite preview",
    "generate-icons": "node scripts/generateIcons.mjs",
    "pwa-validate": "echo 'Validating PWA configuration...' && node -e 'console.log(JSON.parse(require(\"fs\").readFileSync(\"./public/manifest.json\", \"utf8\")))'",
    "update-sw-version": "node scripts/updateServiceWorkerVersion.mjs",
    "force-cache-clear": "echo 'This script helps clear PWA caches. Run: window.forceAppUpdate() in browser console'"
  },
  "dependencies": {
    "@codemirror/autocomplete": "^6.18.6",
    "@codemirror/commands": "^6.8.1",
    "@codemirror/lang-javascript": "^6.2.4",
    "@codemirror/lang-markdown": "^6.3.4",
    "@codemirror/lang-php": "^6.0.2",
    "@codemirror/lang-python": "^6.2.1",
    "@codemirror/lang-sql": "^6.9.1",
    "@codemirror/lang-xml": "^6.1.0",
    "@codemirror/search": "^6.5.11",
    "@codemirror/state": "^6.5.2",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@codemirror/view": "^6.38.2",
    "@octokit/rest": "^22.0.0",
    "@types/html2canvas": "^0.5.35",
    "codemirror": "^6.0.2",
    "dompurify": "^3.2.6",
    "highlight.js": "^11.11.1",
    "html2canvas": "^1.4.1",
    "js-base64": "^3.7.8",
    "jspdf": "^3.0.2",
    "marked": "^16.2.1",
    "path": "^0.12.7",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "url": "^0.11.4",
    "vite": "^6.3.6"
  },
  "devDependencies": {
    "@types/dompurify": "^3.0.5",
    "@types/marked": "^5.0.2",
    "@types/node": "^22.14.0",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "typescript": "~5.8.2"
  }
}